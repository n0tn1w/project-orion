{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: Dev Server",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--inspect",
        "${workspaceFolder}/node_modules/next/dist/bin/next",
        "dev",
        "-p",
        "4000"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "outFiles": ["${workspaceFolder}/.next/**/*.js"]
    },
    {
      "name": "Browser (Edge)",
      "type": "pwa-msedge",
      "request": "launch",
      "url": "http://localhost:4000",
      "webRoot": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "Debug Next.js (server + browser)",
      "configurations": ["Next.js: Dev Server", "Browser (Edge)"]
    }
  ]
}
